<Page x:Class="SupportApp.ArticleManager"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SupportApp"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>


        <ListBox x:Name="Articles" ItemsSource="{Binding Articles}" SelectedItem="{Binding ChosenArticle}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{Binding Name}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>
        <StackPanel Grid.Row="2" VerticalAlignment="Bottom">
            <Button Click="btnNewClick">Ny</Button>
            <Button Click="btnRemoveClick">Fjern</Button>
            <Button Click="Button_Click">tilbage</Button>
        </StackPanel>

        <Grid Grid.Column="2">
            <Label HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Content="Titel" Margin="0,10,0,0"/>
            <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="20" Margin="50,10,0,0" TextChanged="TextBox_TextChanged" Text="{Binding ChosenArticle.Name}"></TextBox>
            <Label Content="Tekst" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,113,0,0"/>
            <Button Content="Bremsekalibrer"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="0,88,0,0"></Button>
            <Label HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Content="Link" Margin="0,41,0,0"/>
            <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="20" Margin="50,41,0,0" TextChanged="TextBox_TextChanged" Text="{Binding ChosenArticle.Link}"></TextBox>

        </Grid>
        <TextBox Margin="10,153,44,30" Grid.Column="2" TextChanged="TextBox_TextChanged" Text="{Binding ChosenArticle.Text}"></TextBox>

    </Grid>
</Page>
